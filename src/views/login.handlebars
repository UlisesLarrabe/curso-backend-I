<section class="w-[300px] h-full flex flex-col justify-center">
  <h1 class="text-center mb-10 text-xl font-bold">Inicia sesión aquí</h1>
  <form
    action=""
    class="flex flex-col gap-5 bg-[#4E31AA] p-2 rounded-sm text-white"
  >
    <label for="email" class="flex flex-col">
      Email
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Ej:ejemplo@email.com"
        class="p-2 rounded-sm text-black"
      />
    </label>
    <label for="password" class="flex flex-col">
      Contraseña
      <input
        type="password"
        name="password"
        id="password"
        placeholder="Contraseña"
        class="p-2 rounded-sm text-black"
      />
    </label>

    <button
      type="submit"
      id="btnLogin"
      class="p-2 bg-[#EBD3F8] text-black font-bold rounded-sm"
    >Iniciar sesión</button>
  </form>
  <a href="/register" class="text-[blue]">¿Quieres registrate?</a>
</section>

<script
  type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/toastify-js"
></script>
<script src="https://cdn.tailwindcss.com"></script>
<script src="js/login.js"></script>