<h1>Todos los productos</h1>
<section id="productsContainer">
  {{#if products}}
    {{#each products}}
      <article class="cardProduct">
        <h1>{{this._doc.title}}</h1>
        <p>{{this._doc.description}}</p>
        <div class="priceAndStock">
          <p>${{this._doc.price}}</p>
          <p>Stock:{{this._doc.stock}}</p>
        </div>
      </article>

    {{/each}}

  {{else}}
    <h2>No hay productos para mostrar....</h2>
  {{/if}}

</section>

<footer>
  {{#if hasPrevPage}}
    <a href="/home?page={{prevPage}}">Volver</a>
  {{/if}}

  <span class="current-page">
    {{currentPage}}
  </span>

  {{#if hasNextPage}}
    <a href="/home?page={{nextPage}}">Siguiente</a>
  {{/if}}
</footer>